{
  "name": "office-coding-agent",
  "version": "0.2.1",
  "private": true,
  "main": "src/tray/main.cjs",
  "description": "Office coding agent add-in with host-routed AI chat",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "dev": "node scripts/kill-port.mjs && node src/server.mjs",
    "start:prod-server": "node src/server-prod.mjs",
    "start:tray": "npm run build && electron .",
    "start:tray:desktop": "node scripts/start-tray-desktop.mjs",
    "stop:tray:desktop": "node scripts/stop-tray-desktop.mjs",
    "build:installer": "npm run build && electron-builder",
    "build:installer:win": "npm run build && electron-builder --win",
    "build:installer:dir": "npm run build && electron-builder --dir",
    "start": "office-addin-debugging start manifests/manifest.dev.xml",
    "start:desktop": "office-addin-debugging start manifests/manifest.dev.xml desktop --app excel",
    "stop": "office-addin-debugging stop manifests/manifest.dev.xml && node scripts/kill-port.mjs",
    "dev:start": "node scripts/start-dev-server.mjs",
    "dev:stop": "node scripts/kill-port.mjs",
    "extensions:samples": "node scripts/generate-extension-samples.mjs",
    "sideload:share:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/sideload/setup-local-share.ps1",
    "sideload:share:trust": "powershell -ExecutionPolicy Bypass -File ./scripts/sideload/trust-local-share.ps1",
    "sideload:share:publish": "powershell -ExecutionPolicy Bypass -File ./scripts/sideload/publish-manifest.ps1",
    "sideload:share:cleanup": "powershell -ExecutionPolicy Bypass -File ./scripts/sideload/remove-local-share.ps1",
    "validate": "office-addin-manifest validate manifests/manifest.dev.xml",
    "validate:staging": "office-addin-manifest validate manifests/manifest.staging.xml",
    "validate:prod": "office-addin-manifest validate manifests/manifest.prod.xml",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "playwright test",
    "test:e2e": "npx tsx ./node_modules/mocha/bin/mocha --extension ts tests-e2e/runner.test.ts",
    "test:e2e:ppt": "npx tsx ./node_modules/mocha/bin/mocha --extension ts tests-e2e-ppt/runner.test.ts",
    "test:e2e:word": "npx tsx ./node_modules/mocha/bin/mocha --extension ts tests-e2e-word/runner.test.ts",
    "test:e2e:all": "npm run test:e2e && npm run test:e2e:ppt && npm run test:e2e:word",
    "audit:tools:bootstrap": "npx tsx scripts/bootstrap-tool-coverage-map.ts",
    "audit:tools": "npx tsx scripts/check-tool-coverage.ts",
    "audit:tools:strict": "npx tsx scripts/check-tool-coverage.ts --strict",
    "runtime-logging-enable": "office-addin-dev-settings runtime-log --enable",
    "runtime-logging-disable": "office-addin-dev-settings runtime-log --disable",
    "runtime-logging-show": "office-addin-dev-settings runtime-log",
    "postinstall": "patch-package",
    "prepare": "husky"
  },
  "dependencies": {
    "@assistant-ui/react": "^0.12.11",
    "@assistant-ui/react-markdown": "^0.12.4",
    "@github/copilot": "^0.0.414",
    "@github/copilot-sdk": "^0.1.25",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/office-runtime": "^1.0.35",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.575.0",
    "pptxgenjs": "^4.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.5.0",
    "tw-animate-css": "^1.4.0",
    "vscode-jsonrpc": "^8.2.1",
    "ws": "^8.19.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/office-js": "^1.0.574",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.3.1",
    "electron": "^36.9.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "office-addin-debugging": "^6.0.6",
    "office-addin-dev-certs": "^2.0.6",
    "office-addin-dev-settings": "^3.0.6",
    "office-addin-mock": "^3.0.6",
    "patch-package": "^8.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vite-plugin-static-copy": "^3.2.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "tmp": "0.2.4",
    "@noble/hashes": "2.0.1"
  },
  "build": {
    "appId": "com.officecodingagent.tray",
    "productName": "Office Coding Agent",
    "directories": {
      "output": "build/electron"
    },
    "files": [
      "dist/**/*",
      "src/tray/**/*",
      "src/server-prod.mjs",
      "src/copilotProxy.mjs",
      "src/skills/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.css": [
      "prettier --write"
    ]
  }
}
