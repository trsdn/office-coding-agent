{
  "name": "office-coding-agent",
  "version": "0.1.0",
  "private": true,
  "description": "Office coding agent add-in with host-routed AI chat",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev": "webpack serve --mode development",
    "start": "office-addin-debugging start manifest.xml",
    "start:desktop": "office-addin-debugging start manifest.xml desktop --app excel",
    "stop": "office-addin-debugging stop manifest.xml",
    "manifest:staging": "node scripts/generate-staging-manifest.mjs --baseUrl https://sbroenne.github.io/office-coding-agent --output manifests/manifest.staging.xml",
    "extensions:samples": "node scripts/generate-extension-samples.mjs",
    "sideload:share:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/sideload/setup-local-share.ps1",
    "sideload:share:trust": "powershell -ExecutionPolicy Bypass -File ./scripts/sideload/trust-local-share.ps1",
    "sideload:share:publish": "powershell -ExecutionPolicy Bypass -File ./scripts/sideload/publish-manifest.ps1",
    "sideload:share:cleanup": "powershell -ExecutionPolicy Bypass -File ./scripts/sideload/remove-local-share.ps1",
    "validate": "office-addin-manifest validate manifest.xml",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "playwright test",
    "test:e2e": "mocha",
    "runtime-logging-enable": "office-addin-dev-settings runtime-log --enable",
    "runtime-logging-disable": "office-addin-dev-settings runtime-log --disable",
    "runtime-logging-show": "office-addin-dev-settings runtime-log"
  },
  "dependencies": {
    "@ai-sdk/azure": "^3.0.29",
    "@ai-sdk/react": "^3.0.87",
    "@assistant-ui/react": "^0.12.10",
    "@assistant-ui/react-ai-sdk": "^1.3.7",
    "@assistant-ui/react-markdown": "^0.12.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/office-runtime": "^1.0.35",
    "ai": "^6.0.85",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.564.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/mocha": "^10.0.10",
    "@types/office-js": "^1.0.571",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.3",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^17.3.0",
    "html-webpack-plugin": "^5.6.6",
    "jsdom": "^28.1.0",
    "mini-css-extract-plugin": "^2.10.0",
    "mocha": "^11.7.5",
    "office-addin-debugging": "^6.0.6",
    "office-addin-dev-certs": "^2.0.6",
    "office-addin-dev-settings": "^2.0.3",
    "office-addin-mock": "^3.0.6",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.1",
    "prettier": "^3.8.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18",
    "webpack": "^5.105.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "tmp": "0.2.4",
    "@noble/hashes": "2.0.1"
  }
}
